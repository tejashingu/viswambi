<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/full_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableRow
            android:id="@id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@id/imageView1"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:src="@drawable/logo_main" />

            <TextView
                android:id="@id/Txtctgenq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERMANENT ADDRESS"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge" />

        </TableRow>

        <TableRow
            android:id="@id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center" >
        </TableRow>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip" >

            <TableRow
                android:id="@id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/Txtresidentq1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strresidentq1"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium" />

                <EditText
                    android:id="@id/ebillq1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:ems="10"
                    android:hint="@string/strresidentq1"
                    android:inputType="textPostalAddress" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/Txtresidentq2"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/strresidentq2"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium" />

                <EditText
                    android:id="@id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:ems="10"
                    android:textColor="#ffffff"
                    android:hint="@string/strresidentq2"
                    android:inputType="textPostalAddress" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/Txtresidentq3"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/strresidentq3"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium" />

                <EditText
                    android:id="@id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:ems="10"
                    android:hint="@string/strresidentq3"
                    android:inputType="textPostalAddress" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/Txtresidentq4"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/strresidentq4"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium" />

                <EditText
                    android:id="@id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:ems="10"
                    android:hint="@string/strresidentq4"
                    android:inputType="textPostalAddress" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/Txtresidentq5"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/strresidentq5"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium" />

                <EditText
                    android:id="@id/editText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:ems="10"
                    android:hint="@string/strresidentq5"
                    android:inputType="textPostalAddress" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/Txtresidentq6"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:text="@string/strresidentq6"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium" />

                <EditText
                    android:id="@id/editText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:ems="10"
                    android:hint="@string/strresidentq6"
                    android:inputType="number"
                    android:maxLength="6" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip" >

            <TableRow
                android:id="@id/tableRow8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center" >

                <Button
                    android:id="@id/btnback"
                    android:layout_width="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content"
                    android:text="@string/back" />

                <Button
                    android:id="@id/btncopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10.0dip"
                    android:text="Copy From Prev Page" />

                <Button
                    android:id="@id/btnsave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/next" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>