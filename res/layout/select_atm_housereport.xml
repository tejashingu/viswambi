<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/full_bg_gra"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp" >

            <TableRow
                android:id="@id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@id/imageView1"
                    android:layout_width="100.0dip"
                    android:layout_height="100dip"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_main" />
            </TableRow>

        </TableLayout>

        <TableRow
            android:id="@id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@id/textlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25.0dip"
                android:text="SELECT ATM ID TO CONTINUE"
                android:textColor="#ffffff"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="20.0dip"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip" >

            <TableRow
                android:id="@id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/TxtATMID"
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="ATM ID"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@id/TxtvalATMID"
                    android:layout_width="180.0dip"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/TxtLocation"
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="LOCATION"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@id/TxtvalLocation"
                    android:layout_width="160.0dip"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/TxtCustomer"
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="Customer Name"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@id/TxtvalCustomer"
                    android:layout_width="160.0dip"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/TxtBank"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="Bank Name"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@id/TxtvalBank"
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/TxtPhoneNo"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="Site ID"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@id/TxtvalPhoneNo"
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />
            </TableRow>

            <TableRow
                android:id="@id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/TxtDate"
                    android:layout_width="100.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="Date"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@id/TxtvalDate"
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold|italic" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip" >

            <TableRow
                android:id="@id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@id/autoatmid"
                    android:layout_width="220.0dip"
                    android:layout_height="wrap_content"
                    android:hint="ATM ID" />
                
                
                <Button
                    android:id="@id/get"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="GET"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_selector"
                    />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="5.0dip" >

            <TableRow
                android:id="@id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40.0dip" >

                <Button
                    android:id="@id/btnback"
                    android:layout_width="120.0dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:text="BACK" />

                <Button
                    android:id="@id/btnsubmit"
                    android:layout_width="120.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.0dip"
                    android:text="PROCEED"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@drawable/button_selector" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>